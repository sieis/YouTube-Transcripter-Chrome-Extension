{
  "manifest_version": 3,
  "name": "YouTube Transcript Downloader",
  "version": "1.0",
  "description": "Download YouTube video transcripts with one click",
  "permissions": [
    "activeTab",
    "sidePanel"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Download YouTube Transcript"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}